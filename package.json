{
  "name": "webpack-course",
  "version": "1.0.0",
  "description": "Webpack course by Platzi",
  "main": "index.js",
  "scripts": {
    "dev": "webpack serve --config webpack.config.dev.js",
    "build:dev": "webpack --config webpack.config.dev.js",
    "build:analyzer:dev": "npm run create:stats:dev && webpack-bundle-analyzer stats-dev.json",
    "create:stats:dev": "webpack --config webpack.config.dev.js --profile --json > stats-dev.json",
    "script:create:env": "node ./scripts/create-env.js",
    "build:prod": "npm run script:create:env && webpack --config webpack.config.js",
    "build:analyzer:prod": "npm run create:stats:prod && webpack-bundle-analyzer stats-prod.json",
    "create:stats:prod": "webpack --config webpack.config.js --profile --json > stats-prod.json"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/plugin-transform-runtime": "^7.14.3",
    "@babel/preset-env": "^7.14.4",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "copy-webpack-plugin": "^9.0.0",
    "css-loader": "^5.2.6",
    "css-minimizer-webpack-plugin": "^3.0.1",
    "dotenv-webpack": "^7.0.3",
    "eslint-config-standard": "^16.0.3",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.1",
    "mini-css-extract-plugin": "^1.6.0",
    "sass": "^1.34.1",
    "sass-loader": "^12.0.0",
    "terser-webpack-plugin": "^5.1.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.38.1",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "^4.7.0",
    "webpack-dev-server": "^3.11.2"
  }
}
